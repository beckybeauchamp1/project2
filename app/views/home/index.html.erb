<div class = "mainpage">
  <h1>YOGA RETREAT<small></small></h1>
  <p>Start one Today</p>
  <p><%=link_to "Learn More", new_retreat_path, class: "btn btn-primary btn-lg", role: "button"%></p>
</div>
<div class="row main">
  <h2>Recent Retreats</h2>
  <%@recent_retreats.each do |retreat|%>
  <div class="col-md-4">
      <div class="thumbnail">
        <div class = "hidephoto">
          <% photo = retreat.photos.shuffle.first %>
          <%if photo.photo_url?%>
          <%= image_tag(photo.photo_url)%>
          <%else%>
          <%= image_tag(photo.image)%>
          <%end%>
        </div>
      <div class="caption">
        <h3><%=retreat.title%></h3>
        <p><%=retreat.description.truncate_words(10)%></p>
        <p><%=retreat.address%></p>
        <p><%=link_to 'More Details', retreats_path, class: "btn btn-primary", role: "button"%><%=link_to "Photos", retreat_photos_path(retreat),class: "btn btn-default", role: "button"%></p>
      </div>
      </div>
    </div>
    <%end%>
</div>
